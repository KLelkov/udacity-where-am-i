        </collision>

        <visual>
         <origin xyz="0 0 0" rpy=" 0 0 0"/>
          <geometry>
           <box size=".03 .03 .03"/>
          </geometry>
        </visual>
    </link>

    <gazebo reference="camera">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint type="fixed" name="camera_joint">
        <origin xyz="0.14 0 0" rpy="0 0 0"/>
        <child link="camera"/>
        <parent link="head"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
    </joint>

