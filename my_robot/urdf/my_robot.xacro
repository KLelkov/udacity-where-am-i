    <!-- SENSORS
    \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\-->

    <link name='camera'>
        <pose>0 0 0 0 0 0</pose>

        <inertial>
        <mass value="0.1"/>
        <origin xyz="0.05 0.05 0.05" rpy=" 0 0 0"/>
         <inertia
             ixx="1e-6" ixy="0" ixz="0"
             iyy="1e-6" iyz="0"
              izz="1e-6"
        />
        </inertial>

        <collision>
         <origin xyz="0 0 0" rpy=" 0 0 0"/> 
        <geometry>
